@model HostelMgtSystem.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    // var currentUserEmail = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-lg">
                <div class="card-header bg-primary text-white text-center rounded-top-lg py-3">
                    <h2 class="mb-0">Login</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input autocomplete="on" asp-for="Email" class="form-control rounded-md" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger text-sm mt-1 d-block"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password: </label>
                            <input autocomplete="off" type="password" asp-for="Password" class="form-control rounded-md" placeholder="Please enter password" />
                            <span asp-validation-for="Password" class="text-muted text-sm mt-1 d-block"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-md">Login</button>
                        </div>
                        <br/>
                    </form>

                    <div class="d-grid">
                        <a asp-controller="Home" asp-action="RegisterUser" class="btn btn-secondary btn-lg rounded-md">Don't have an account? Register here!</a>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="ForgotPassword" class="btn btn-link text-muted">Forgot Password?</a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
