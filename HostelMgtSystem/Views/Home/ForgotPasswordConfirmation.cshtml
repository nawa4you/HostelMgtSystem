@{
    ViewData["Title"] = "Password Reset Request Status";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-lg">
                <div class="card-header bg-info text-white text-center rounded-top-lg py-3">
                    <h5 class="mb-0">Request Status</h5>
                </div>
                <div class="card-body p-4 text-center">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    else if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    else
                    {
                        <p>Your request has been processed.</p>
                        <p>Please check your email (or the previous page's message) for further instructions.</p>
                    }
                    <p class="mt-4">
                        <a asp-controller="Home" asp-action="Login" class="btn btn-primary">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

